{
  "title": "For Korean PC Keyboard",
  "rules": [
    {
        "description": "Change Kor/Eng key to command+space",
        "manipulators": [
        {
          "from": {
            "key_code": "lang1"
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "right_command"
            ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
        "description": "Change Hanja key to option+return",
        "manipulators": [
        {
          "from": {
            "key_code": "lang2"
          },
          "to": [
            {
              "key_code": "return_or_enter",
              "modifiers": [
                "right_option"
            ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
